<%- layout ('layout/main') %>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-header mt-4 text-center">
                Iniciar Sesión
            </div>
            <div class="card-body">
                <form id="formSignIn"action="/signin" method="POST" novalidate>
                    <div class="form-group">
                        <label for="email" >Email</label>
                        <input type="email" name="email" id="emailFieldSignIn" class="form-control">
                        <div id="emailFieldSignInError" class="errorField">

                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="passwordFieldSignIn" class="form-control">
                        <div id="passwordFieldSignInError" class="errorField">
                        
                        </div>
                    </div>
                    
                    <button  class="btn btn-primary btn-block mt-4" id="submitFormSignIn" type="submit">
                        Iniciar Sesión
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>